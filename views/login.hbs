  <title>Авторизоваться</title>

 
<form class="form-signin" action="/users/login" method="post">
  <div class="autorization">
    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>

    </div>
    <div class="autorization">
      <div class="form-label-group">
        <label class ="textInput" for="name">Имя пользователя<br></label>
        <input name="name" type="text" id="inputEmail" class="form-control" placeholder="Введите имя" required
          autofocus>
      </div>

      <div class="form-label-group">
        <label class ="textInput" for="password">Пароль<br></label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Пароль"
          required>
      </div>


      <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
     {{#if notFound}}
      <div class="">Пользователь не найден</div>
     {{/if}}
      {{#if wrongPassword}}
      <div class="">Неверный пароль</div>
      {{/if}}
    </div>
  </div>
</form>
 